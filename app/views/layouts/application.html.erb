<!DOCTYPE html>
<html>
  <head>
    <title>NotesApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <style>
      body {
        font-family: Arial, sans-serif;
        background: #f4f6f9;
        margin: 0;
      }

      .navbar {
        background: #4f46e5;
        color: white;
        padding: 15px;
        font-size: 20px;
        font-weight: bold;
      }

      .container {
        width: 70%;
        margin: 40px auto;
      }

      .card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      }

      .btn {
        padding: 8px 12px;
        border-radius: 6px;
        text-decoration: none;
        color: white;
        margin-right: 5px;
      }

      .btn-primary { background: #4f46e5; }
      .btn-danger { background: #dc2626; }
      .btn-success { background: #16a34a; }

      input, textarea {
        width: 100%;
        padding: 10px;
        margin: 8px 0;
        border-radius: 6px;
        border: 1px solid #ccc;
      }
    </style>
  </head>

  <body>
    <div class="navbar">Notes CRUD App</div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>